<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/eventlist_priority"
            android:background="@drawable/ic_action_save_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/eventlist_startDate"
                android:text="@string/defaultDate" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/eventlist_endDate"
                android:text="@string/defaultDate2" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eventlist_start"
            android:text="@string/defaultTime" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eventlist_end"
            android:text="@string/defaultTime2" />

    </LinearLayout>

        <View
            android:layout_margin="2dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <TextView
            android:text="@string/eventlist_row_tv_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eventlist_title"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eventlist_category"
            android:textSize="12sp"
            android:text="@string/eventlist_row_category_text" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>