<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.grau.organizer.activities.EditorActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@android:drawable/screen_background_light_transparent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_cancel"
                android:id="@+id/editor_toolbar_cancel"
                android:background="@color/colorPrimary"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_save"
                android:id="@+id/editor_toolbar_save"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="20dp"
               />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.grau.organizer.activities.EditorActivity">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editor_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/layout_hint_eventName" />
            <View
                android:background="@drawable/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoCorrect|textMultiLine"
                android:id="@+id/editor_description"
                android:layout_marginTop="10dp"
                android:hint="@string/layout_editor_descriptionhint"
                android:elegantTextHeight="true" />
            <View
                android:background="@drawable/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GanztÃ¤giges Ereignis    "
                android:layout_gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <Button
                    android:drawableLeft="@drawable/ic_event_date"
                    android:id="@+id/editor_btn_pickdate"
                    android:text="@string/datepickPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />

                <Button
                    android:id="@+id/editor_btn_picktime"
                    android:text="@string/_16_30_17_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/layout_enddate"
                android:layout_height="40dp">
                <Button
                    android:drawableLeft="@drawable/ic_event_date"
                    android:id="@+id/editor_btn_pickdate_fin"
                    android:text="@string/datepickPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>

                <Button
                    android:id="@+id/editor_btn_picktime_fin"
                    android:text="@string/_16_30_17_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:elevation="0dp" />
            </LinearLayout>
            <View
                android:background="@drawable/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <Button
                    android:drawableLeft="@drawable/ic_add_notification"
                    android:id="@+id/editor_btn_picknotifydelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_btn_picknotifydelay" />

                <Button
                    android:drawableLeft="@drawable/ic_action_phone"
                    android:text="@string/editor_btn_chooseaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editor_btn_chooseaction" />
                <Button
                    android:drawableLeft="@drawable/ic_priority"
                    android:text="@string/editor_btn_priority"
                    android:layout_height="wrap_content"
                    android:id="@+id/editor_btn_priority"
                    android:layout_weight="1"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <View
                android:background="@drawable/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editor_notecontainer">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:drawableLeft="@drawable/ic_add_note"
                    android:text="@string/layout_button_addNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editor_btn_addnote"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <View
                android:background="@drawable/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:text="No Tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editor_tags" />

            <Button
                android:drawableLeft="@drawable/ic_add_tag"
                android:text="Add Tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editor_btn_tags" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>

